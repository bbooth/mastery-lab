<div class="panel panel-default">
    <div class="panel-heading">
        <h1>
            Meetings
        </h1>

        <div class="input-group">
            {{input class="form-control" type="text" id="create-meeting" placeholder="meeting name" value=newTitle action="createMeeting"}}
            <span class="input-group-btn">
                <button class="btn btn-success" type="button" {{action "createMeeting"}}>Create</button>
            </span>
        </div>
    </div>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Duration</th>
            <th>Attendees</th>
        </tr>
        {{#each meeting in model}}
            <tr>
                <td>{{meeting.title}}</td>
                <td>{{meeting.duration}}</td>
                <td>
                    <ul>
                        {{#each attendee in meeting.attendees}}
                            <li>{{attendee.person.name}}</li>
                        {{/each}}
                    </ul>
                </td>
            </tr>
        {{/each}}
    </table>
</div>